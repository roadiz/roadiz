{
    "name": "roadiz/roadiz",
    "description":"Roadiz is a polymorphic CMS based on a node system which can handle many type of services. Itâ€™s based on Symfony component and Doctrine ORM for maximum performances and security.",
    "license":"MIT",
    "type": "library",
    "keywords": [
        "cms",
        "backoffice",
        "rezo zero"
    ],
    "authors": [
        {
            "name": "Ambroise Maupate",
            "email": "ambroise@rezo-zero.com",
            "homepage": "https://www.rezo-zero.com",
            "role": "Lead developer"
        },
        {
            "name": "Julien Blanchet",
            "email": "julien@rezo-zero.com",
            "homepage": "https://www.rezo-zero.com",
            "role": "AD, integrator"
        },
        {
            "name": "Adrien Scholaert",
            "email": "adrien@rezo-zero.com",
            "homepage": "https://www.rezo-zero.com",
            "role": "Frontend developer"
        }
    ],
    "config": {
        "bin-dir": "bin",
        "platform": {
            "php": "5.6.1"
        }
    },
    "require": {
        "php":                         ">=5.6",
        "roadiz/models":               "dev-develop",
        "roadiz/documents":            "dev-develop",
        "doctrine/orm":                "^2.5",
        "symfony/yaml":                "3.2.*",
        "symfony/console":             "2.8.*",
        "symfony/http-foundation":     "2.8.*",
        "symfony/routing":             "2.8.*",
        "symfony/config":              "2.8.*",
        "symfony/http-kernel":         "2.8.*",
        "symfony/stopwatch":           "2.8.*",
        "symfony/form":                "2.8.*",
        "symfony/validator":           "2.8.*",
        "symfony/security-csrf":       "2.8.*",
        "symfony/twig-bridge":         "2.8.21",
        "symfony/finder":              "2.8.*",
        "symfony/serializer":          "3.2.*",
        "symfony/filesystem":          "2.8.*",
        "symfony/security":            "2.8.*",
        "symfony/asset":               "2.8.*",
        "symfony/translation":         "2.8.*",
        "symfony-cmf/routing":         "~1.4.0",
        "twig/twig":                   "1.*",
        "twig/extensions":             "1.*",
        "guzzlehttp/guzzle":           "^6.0",
        "swiftmailer/swiftmailer":     "5.*",
        "erusev/parsedown":            "~1.6.0",
        "solarium/solarium":           "3.*",
        "pimple/pimple":               "3.0.*",
        "inlinestyle/inlinestyle":     "1.2.*",
        "phpoffice/phpexcel":          "1.8.*",
        "asm89/twig-cache-extension":  "~1.0",
        "wikimedia/composer-merge-plugin": "~1.0",
        "monolog/monolog":"~1.22.0",
        "ambroisemaupate/intervention-request":"^2.1",
        "intervention/image": "~2.4",
        "erusev/parsedown-extra": "~0.7.1",
        "graylog2/gelf-php": "~1.0",
        "enshrined/svg-sanitize": "^0.5.3",
        "maximebf/debugbar": "~1.13.0",
        "jbzoo/pimpledumper": "^1.2",
        "composer/composer": "^1.6"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.7.27",
        "satooshi/php-coveralls": "~2.0",
        "squizlabs/php_codesniffer": "@stable",
        "sentry/sentry": "^1.9"
    },
    "autoload": {
        "psr-4": {
            "RZ\\":                   "src/",
            "Themes\\":               "themes/",
            "GeneratedNodeSources\\": "gen-src/GeneratedNodeSources",
            "Proxies\\":              "gen-src/Proxies"
        },
        "psr-0": {
            "GlobalUrlMatcher":   "gen-src/Compiled/",
            "GlobalUrlGenerator": "gen-src/Compiled/"
        }
    },
    "extra": {
        "merge-plugin": {
            "include": [
                "themes/*/composer.json"
            ],
            "recurse": false
        },
        "install-files": {
            "conf/config.default.yml": "./conf/config.yml",
            "samples/clear_cache.php.sample": "./clear_cache.php",
            "samples/install.php.sample": "./install.php",
            "samples/dev.php.sample": "./dev.php",
            "samples/Vagrantfile.sample": "./Vagrantfile"
        }
    },
    "bin": ["bin/roadiz"],
    "scripts": {
        "cache-scripts": [
            "php bin/roadiz cache:clear -e prod",
            "php bin/roadiz cache:clear -e dev",
            "php bin/roadiz cache:clear -e prod --preview",
            "php bin/roadiz cache:clear-fpm -e prod",
            "php bin/roadiz cache:clear-fpm -e prod --preview"
        ],
        "post-install-cmd": [
            "RZ\\Roadiz\\Utils\\Composer\\InstallFiles\\ScriptHandler::install",
            "@cache-scripts"
        ],
        "post-update-cmd": [
            "RZ\\Roadiz\\Utils\\Composer\\InstallFiles\\ScriptHandler::install",
            "@cache-scripts"
        ]
    }
}
