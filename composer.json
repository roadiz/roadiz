{
    "name": "roadiz/roadiz",
    "description":"Roadiz is a polymorphic CMS based on a node system which can handle many type of services. Itâ€™s based on Symfony component and Doctrine ORM for maximum performances and security.",
    "license":"MIT",
    "type": "library",
    "keywords": [
        "cms",
        "backoffice",
        "rezo zero"
    ],
    "authors": [
        {
            "name": "Ambroise Maupate",
            "email": "ambroise@rezo-zero.com",
            "homepage": "https://www.rezo-zero.com",
            "role": "Lead developer"
        },
        {
            "name": "Julien Blanchet",
            "email": "julien@rezo-zero.com",
            "homepage": "https://www.rezo-zero.com",
            "role": "AD, integrator"
        },
        {
            "name": "Adrien Scholaert",
            "email": "adrien@rezo-zero.com",
            "homepage": "https://www.rezo-zero.com",
            "role": "Frontend developer"
        }
    ],
    "config": {
        "optimize-autoloader": true,
        "bin-dir": "bin"
    },
    "require": {
        "php":                         ">=7.2",
        "ext-curl":                    "*",
        "ext-json":                    "*",
        "ext-zip":                     "*",
        "ext-pdo":                     "*",
        "roadiz/models":               "~1.2.0",
        "roadiz/documents":            "~1.2.0",
        "doctrine/orm":                "~2.6.3",
        "symfony/yaml":                "~3.4.29",
        "symfony/console":             "~3.4.29",
        "symfony/http-foundation":     "~3.4.29",
        "symfony/routing":             "~3.4.29",
        "symfony/config":              "~3.4.29",
        "symfony/http-kernel":         "~3.4.29",
        "symfony/stopwatch":           "~3.4.29",
        "symfony/form":                "~3.4.29",
        "symfony/validator":           "~3.4.29",
        "symfony/security-csrf":       "~3.4.29",
        "symfony/twig-bridge":         "~3.4.29",
        "symfony/finder":              "~3.4.29",
        "symfony/serializer":          "~3.4.29",
        "symfony/filesystem":          "~3.4.29",
        "symfony/security":            "~3.4.29",
        "symfony/asset":               "~3.4.29",
        "symfony/translation":         "~3.4.29",
        "symfony-cmf/routing":         "~2.1.0",
        "twig/twig":                   "2.*",
        "twig/extensions":             "~1.5.4",
        "guzzlehttp/guzzle":           "^6.3",
        "swiftmailer/swiftmailer":     "~6.0.0",
        "erusev/parsedown":            "<=1.6.4 | 1.8.0-beta-5 | ~1.8.0",
        "erusev/parsedown-extra":      "<=0.7.1 | 0.8.0-beta-1 | ~0.8.0",
        "solarium/solarium":           "~3.8.1",
        "pimple/pimple":               "~3.2.3",
        "inlinestyle/inlinestyle":     "~1.2.0",
        "asm89/twig-cache-extension":  "~1.3.2",
        "monolog/monolog":"~1.24.0",
        "ambroisemaupate/intervention-request":"^2.3",
        "intervention/image": "~2.4",
        "graylog2/gelf-php": "~1.0",
        "enshrined/svg-sanitize": "^0.10.0",
        "maximebf/debugbar": "~1.15.0",
        "jbzoo/pimpledumper": "^1.2",
        "phpoffice/phpspreadsheet": "^1.1",
        "composer/composer": "^1.8.6",
        "symfony/workflow": "~4.2.10",
        "jms/serializer": "~2.3.0 || ~3.1.1",
        "rollerworks/password-strength-validator": "^1.1",
        "gedmo/doctrine-extensions": "^2.4"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.7.27",
        "php-coveralls/php-coveralls": "~2.1",
        "squizlabs/php_codesniffer": "@stable",
        "sentry/sentry": "^1.9",
        "friendsofphp/php-cs-fixer": "^2.13"
    },
    "autoload": {
        "psr-4": {
            "RZ\\":                   "src/",
            "Themes\\":               "themes/",
            "GeneratedNodeSources\\": "gen-src/GeneratedNodeSources",
            "Proxies\\":              "gen-src/Proxies"
        },
        "psr-0": {
            "GlobalUrlMatcher":   "gen-src/Compiled/",
            "GlobalUrlGenerator": "gen-src/Compiled/"
        }
    },
    "extra": {
        "install-files": {
            "conf/config.default.yml": "./conf/config.yml",
            "samples/clear_cache.php.sample": "./clear_cache.php",
            "samples/install.php.sample": "./install.php",
            "samples/dev.php.sample": "./dev.php",
            "samples/Vagrantfile.sample": "./Vagrantfile"
        },
        "config-path": "./conf/config.yml"
    },
    "bin": ["bin/roadiz"],
    "scripts": {
        "cache-scripts": [
            "php bin/roadiz cache:clear -e prod",
            "php bin/roadiz cache:clear -e dev",
            "php bin/roadiz cache:clear -e prod --preview",
            "php bin/roadiz cache:clear-fpm -e prod",
            "php bin/roadiz cache:clear-fpm -e prod --preview"
        ],
        "post-install-cmd": [
            "RZ\\Roadiz\\Utils\\Composer\\InstallFiles\\ScriptHandler::install",
            "RZ\\Roadiz\\Utils\\Composer\\InstallFiles\\ScriptHandler::rotateSecret",
            "@cache-scripts"
        ],
        "post-update-cmd": [
            "RZ\\Roadiz\\Utils\\Composer\\InstallFiles\\ScriptHandler::install",
            "RZ\\Roadiz\\Utils\\Composer\\InstallFiles\\ScriptHandler::rotateSecret",
            "@cache-scripts"
        ]
    }
}
