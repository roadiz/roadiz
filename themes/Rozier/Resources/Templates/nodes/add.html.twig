{% extends 'base.html.twig' %}

{% block content %}
<section id="add-node" class="">
	<h1 id="node-title">{% trans %}Add a new node{% endtrans %}: <em>{{ type.getDisplayName }}</em></h1>
	<nav><a class="uk-button uk-button-small" href="{{ path('nodesHomePage') }}"><span class="uk-icon-chevron-left"></span>{% trans %}Back to nodes{% endtrans %}</a></nav>

	<form class="uk-form uk-form-stacked" action="#" method="post" {{ form_enctype(form) }}>
   		{{ form_errors(form) }}

	    {% for item in form %}
	    	{% if item.vars.name != "_token" %}
			    <div class="uk-form-row">
			        <label class="uk-form-label"for="{{ item.vars.id }}">{{ item.vars.name }}</label>
			        {{ form_errors(item) }}
			        {{ form_widget(item) }}
			    </div>
	    	{% endif %}
	    {% endfor %}
	    {{ form_rest(form) }}
	    <input class="uk-button uk-button-primary" type="submit" />
	</form>
</section>
{% endblock %}