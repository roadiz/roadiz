{% extends '@Rozier/layout.html.twig' %}


{% block content %}
<section class="content-global manage-document">

    <header class="content-header header-document header-document-edit">
        <h1 class="content-title document-edit-title">{{ "edit.document.%name%"|trans({'%name%': document.getFilename})|truncate(25, true, '[â€¦]') }}</h1>
        {% include '@Rozier/documents/navBar.html.twig' with {'document':document, current:'metas'} %}
        {% include '@Rozier/document-translations/translationBar.html.twig' with {"current": translation.getId} %}
        {% include '@Rozier/documents/backLink.html.twig' %}
    </header>

    <article class="content content-document-edit">
        {% form_theme form '@Rozier/forms.html.twig' %}
        {{ form_start(form, { attr: { id: "edit-document-form"}}) }}
            {{ form_widget(form) }}
            <fieldset data-uk-margin>
                {% spaceless %}
                <button data-action-save="#edit-document-form" class="uk-button uk-button-primary rz-action-save" type="submit">
                    <span class="icon-container"><i class="uk-icon-rz-save-mini"></i></span>
                    <span class="label"><span class="label-text">{% trans %}save{% endtrans %}</span></span>
                </button>
                {% endspaceless %}
            </fieldset>
        {{ form_end(form) }}
    </article>

    {% include '@Rozier/documents/actionsMenu.html.twig' %}
</section>
{% endblock %}
