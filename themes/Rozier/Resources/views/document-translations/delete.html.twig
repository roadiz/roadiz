{% extends '@Rozier/layout.html.twig' %}

{% block content %}
<section class="content-global delete-document">
    <header class="content-header header-document header-document-preview">
        <h1 class="content-title document-delete-title">{{ "delete.document.translation.%name%"|trans({'%name%': documentTr.getName})|u.truncate(25, '[â€¦]', true) }}</h1>
    </header>

    <article class="content content-delete content-no-action-menu">
        {% form_theme form '@Rozier/forms.html.twig' %}
        {{ form_start(form, {
            attr: {
                class: 'uk-form uk-form-stacked'
            }
        }) }}
            {{ form_widget(form) }}
            <fieldset data-uk-margin>
                <legend class="uk-alert uk-alert-danger"><i class="uk-icon uk-icon-warning"></i> {% trans %}are_you_sure.delete.document.translation{% endtrans %}</legend>
                <a href="{{ path('documentsMetaPage', {
                    'documentId':documentTr.document.id,
                    'translationId':documentTr.translation.id
                }) }}" class="uk-button"><i class="uk-icon-rz-back-parent"></i> {% trans %}cancel{% endtrans %}</a>
                <button class="uk-button uk-button-danger" type="submit"><i class="uk-icon-rz-trash-mini-o"></i> {% trans %}delete{% endtrans %}</button>
            </fieldset>
        {{ form_end(form) }}
    </article>
</section>
{% endblock %}
