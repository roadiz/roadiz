{% extends '@Rozier/layout.html.twig' %}


{% block content %}
<section class="content-global download-document">
	<header class="content-header header-document header-document-preview">
        <h1 class="content-title document-download-title">{{ "download.documents"|trans()|u.truncate(25, '[â€¦]', true) }}</h1>
    </header>

    <article class="content content-download content-no-action-menu">
        {% form_theme form '@Rozier/forms.html.twig' %}
        {{ form_start(form, {
            'action': action,
            'attr': { id: "documents-bulk-download-form"}
        }) }}
            {{ form_widget(form) }}
            <fieldset data-uk-margin>
                <legend class="uk-alert uk-alert-info"><i class="uk-icon uk-icon-info-circle"></i> {% trans %}are_you_sure.download.these.documents{% endtrans %}</legend>
                <a href="{{ path('documentsHomePage') }}" class="uk-button"><i class="uk-icon-rz-back-parent"></i> {% trans %}cancel{% endtrans %}</a>
                <button class="uk-button uk-button-primary" type="submit"><i class="uk-icon-rz-download"></i> {% trans %}download{% endtrans %}</button>
            </fieldset>
        {{ form_end(form) }}

        {% apply spaceless %}
        <div class="documents-list">
        {% for document in documents %}
        {% include '@Rozier/documents/singleDocumentThumbnail.html.twig' with {
            document: document,
            thumbnailFormat: thumbnailFormat,
            controls: false
        } only %}
        {% endfor %}
        </div>
        {% endapply %}
	</article>
</section>
{% endblock %}
