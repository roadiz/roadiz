{% if not head.ajax %}{% set baseTemplate = '@Rozier/base.html.twig' %}{% else %}{% set baseTemplate = '@Rozier/ajaxBase.html.twig' %}{% endif %}{% extends baseTemplate %}

{% block content %}
<section class="content-global">

    <header class="content-header header-tags header-tags-add">
        <h1 class="content-title nodes-list-title">{% trans %}add.multiple.tags{% endtrans %}</h1>
        {% include '@Rozier/tags/navBack.html.twig' with {} only %}
        {% include '@Rozier/tags/navBar.html.twig' with {"tag": tag, "current": 'add-multiple'} only %}
    </header>

    <article class="content content-tags-add">
        {% form_theme form '@Rozier/forms.html.twig' %}
        {{ form_start(form, { attr: {id: 'add-tag-form'}}) }}
            {{ form_widget(form) }}
            <fieldset data-uk-margin>
                {% spaceless %}
                <button data-action-save="#add-tag-form" class="uk-button uk-button-primary" type="submit">
                    <span class="icon-container"><i class="uk-icon-plus"></i></span>
                    <span class="label"><span class="label-text">{% trans %}add_all{% endtrans %}</span></span>
                </button>
                {% endspaceless %}
            </fieldset>
        {{ form_end(form) }}
    </article>

    {% include '@Rozier/tags/actionsMenu.html.twig' %}
</section>
{% endblock %}
