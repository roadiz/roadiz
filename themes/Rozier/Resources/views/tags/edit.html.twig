{% extends '@Rozier/layout.html.twig' %}

{% block content %}
<section class="content-global edit-tag">

    <header class="content-header header-tag header-tag-edit">
        <h1 class="content-title tag-edit-title">{{ "edit.tag.%name%"|trans({'%name%': tag.getTagName })|truncate(25, true, '[â€¦]') }}</h1>
        {% include '@Rozier/tags/navBack.html.twig' with {} only %}
        {% include '@Rozier/tags/navBar.html.twig' with {"tag": tag, "current": 'edit'} only %}
        {% include '@Rozier/tags/translationBar.html.twig' with {"tag": tag, "current":translation.getId } %}
    </header>

    <article class="content content-tag-edit">
        {% if readOnly %}
            <div class="uk-alert uk-alert-warning" data-uk-alert>
                <a href="{{ path('tagsEditTranslatedPage', {
                    tagId: tag.id,
                    translationId: translation.id
                }) }}" class="uk-alert-close uk-close"></a>
                <h4>{% trans %}versions.viewing_a_previous_version{% endtrans %}</h4>
                <p>{{ currentVersion.loggedAt|localizeddate('full', 'short') }} - {{ currentVersion.username }}</p>
                {% if revertForm %}
                    {{ form_start(revertForm, { attr: {id: 'revert-node-source-form'}}) }}
                    {{ form_widget(revertForm) }}
                    {% spaceless %}
                        <div class="uk-button-group">
                            <button class="uk-button uk-button-warning" type="submit">
                                <span class="icon-container"><i class="uk-icon-rz-back-parent"></i></span>
                                <span class="label"><span class="label-text">{% trans %}versions.revert_to_this_version{% endtrans %}</span></span>
                            </button>
                            <a class="uk-button" href="{{ path('tagsEditTranslatedPage', {
                                tagId: tag.id,
                                translationId: translation.id
                            }) }}"><i class="uk-icon-rz-home"></i> {% trans %}versions.back_to_working_copy{% endtrans %}</a>
                        </div>
                    {% endspaceless %}
                    {{ form_end(revertForm) }}
                {% endif %}
            </div>
        {% endif %}

        {% form_theme form '@Rozier/forms.html.twig' %}
        {{ form_start(form, { attr: {id: 'edit-tag-form'}}) }}
            {{ form_widget(form) }}
            <fieldset data-uk-margin>
                {% if not readOnly %}
                    {% spaceless %}
                        <button data-action-save="#edit-tag-form" class="uk-button uk-button-primary rz-action-save" type="submit">
                            <span class="icon-container"><i class="uk-icon-rz-save-mini"></i></span>
                            <span class="label"><span class="label-text">{% trans %}save{% endtrans %}</span></span>
                        </button>
                    {% endspaceless %}
                {% endif %}
            </fieldset>
        {{ form_end(form) }}
    </article>

    {% include '@Rozier/tags/actionsMenu.html.twig' %}
</section>
{% endblock %}
