{% if not head.ajax %}{% set baseTemplate = 'base.html.twig' %}{% else %}{% set baseTemplate = 'ajaxBase.html.twig' %}{% endif %}{% extends baseTemplate %}

{% block content %}
<section class="content-global content-nav-and-filters">

    <header class="content-header header-node-types header-node-types-list">
        <h1 class="content-title nodes-node-types-title">{% trans %}customFormAnswer{% endtrans %}</h1>
        {% include 'widgets/countFiltersBar.html.twig' %}
        <a class="content-header-nav-back uk-navbar-content" href="{{ path('customFormsHomePage') }}" title="{% trans %}back_to.customForms{% endtrans %}" data-uk-tooltip="{animation:true}"><i class="uk-icon-rz-back-parent"></i> </a>
    </header>

    {% include 'widgets/filtersBar.html.twig' %}

    <article class="content content-no-action-menu content-node-types-list">
        <div class="content-table-cont">
            {% spaceless %}
			<table class="node-types content-table uk-table">
				<thead>
			        <tr>
                        <th>{% trans %}ip{% endtrans %}</th>
			            <th>{% trans %}submitted.date{% endtrans %}</th>
			            {# <th>{% trans %}nodeType.entityName{% endtrans %}</th> #}
			            {# <th></th> #}
			            <th>{% trans %}actions{% endtrans %}</th>
			        </tr>
			    </thead>
				<tbody>
					{% for type in custom_form_answers %}
						<tr>

							<td>{{ type.ip }}</td>
                            <td>{{ type.submittedAt|localizeddate('short') }}</td>
							{# <td>{{ type.getSourceEntityClassName }}</td> #}
{# 							<td><div class="uk-badge">{% transchoice type.getFields|length %}{0} no.customFormField|{1} 1.customFormield|]1,Inf] %count%.customFormFields{% endtranschoice %}</div></td> #}
							<td>
								<a class="uk-button uk-button-small" href="{{ path('customFormFieldAttributesHomePage', { customFormAnswerId: type.getId }) }}">
									<i class="uk-icon-node-type-fields"></i> {% trans %}customFormAnswer.answers{% endtrans %}
								</a>
								<a class="uk-button uk-button-small uk-button-danger" href="{{ path('customFormAnswersDeletePage', { customFormAnswerId: type.getId }) }}"><i class="uk-icon-rz-trash-o"></i> {% trans %}delete{% endtrans %}</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
			{% endspaceless %}
        </div>
    </article>

</section>
{% endblock %}
