{% if not head.ajax %}{% set baseTemplate = 'base.html.twig' %}{% else %}{% set baseTemplate = 'ajaxBase.html.twig' %}{% endif %}{% extends baseTemplate %}

{% block content %}
<section class="content-global">

    <header class="content-header header-node-types header-node-types-delete">
        <h1 class="content-title node-delete-title">{{ "delete.customFormAnswer.%name%"|trans({'%name%': customForm.getDisplayName})|truncate(25, true, '[â€¦]') }}</h1>
    </header>

    <article class="content content-delete content-node-types-delete content-no-action-menu">
        {% form_theme form 'forms.html.twig' %}
        <form class="uk-form uk-form-stacked" action="#" method="post" {{ form_enctype(form) }}>
            {{ form_widget(form) }}
            <fieldset data-uk-margin>
                <legend>{% trans %}are_you_sure.delete.customFormAnswer{% endtrans %}</legend>
                <a href="{{ path('customFormAnswersHomePage', {customFormId: customFormAnswer.customForm.getId}) }}" class="uk-button"><i class="uk-icon-rz-back-parent"></i> {% trans %}cancel{% endtrans %}</a>
                <button class="uk-button uk-button-danger" type="submit"><i class="uk-icon-trash-o"></i> {% trans %}delete{% endtrans %}</button>
            </fieldset>
        </form>
    </article>

</section>
{% endblock %}
