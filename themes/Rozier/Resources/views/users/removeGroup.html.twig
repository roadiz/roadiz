{% if not head.ajax %}{% set baseTemplate = 'base.html.twig' %}{% else %}{% set baseTemplate = 'ajaxBase.html.twig' %}{% endif %}{% extends baseTemplate %}

{% block content %}

<section class="content-global delete-user">

    <header class="content-header header-user header-user-delete">
        <h1 class="content-title user-delete-title">{{ "remove.user.%name%.from.group.%group%"|trans({'%name%': user.getUserName, '%group%': group.getName}) }}</h1>
    </header>

    <article class="content content-delete content-no-action-menu">
    	{% form_theme form 'forms.html.twig' %}
        <form class="uk-form uk-form-stacked" action="#" method="post" {{ form_enctype(form) }}>
            {{ form_widget(form) }}
    	    <fieldset data-uk-margin>
    	    	<legend>{% trans %}are_you_sure.remove.user.from.group{% endtrans %}</legend>
    	    	<a href="{{ path('usersEditGroupsPage', { userId: user.getId }) }}" class="uk-button"><i class="uk-icon-rz-back-parent"></i> {% trans %}cancel{% endtrans %}</a>
    	    	<button class="uk-button uk-button-danger" type="submit"><i class="uk-icon-trash-o"></i> {% trans %}remove{% endtrans %}</button>
       		</fieldset>
    	</form>
    </article>
</section>
{% endblock %}
