{% if not head.ajax %}{% set baseTemplate = '@Rozier/base.html.twig' %}{% else %}{% set baseTemplate = '@Rozier/ajaxBase.html.twig' %}{% endif %}{% extends baseTemplate %}

{% block content %}
<section class="content-global">

    <header class="content-header header-node-type-fields header-node-type-fields-add">
        <h1 class="content-title">{% trans %}add.a.nodeTypeField{% endtrans %}</h1>
         <a class="content-header-nav-back uk-navbar-content" href="{{ path('nodeTypeFieldsListPage', { nodeTypeId: nodeType.getId }) }}" title="{% trans %}back_to.nodeTypeFields{% endtrans %}" data-uk-tooltip="{animation:true}"><i class="uk-icon-rz-back-parent"></i></a>
    </header>

    <node-type-field-form-container inline-template data-vuejs>
        <article class="content">
            {% form_theme form '@Rozier/forms.html.twig' %}
            <form id="add-node-type-field-form" class="uk-form uk-form-stacked" action="#" method="post" {{ form_enctype(form) }}>
                {{ form_widget(form) }}
                <fieldset data-uk-margin>
                    {% spaceless %}
                    <button data-action-save="#add-node-type-field-form" class="uk-button uk-button-primary rz-action-save" type="submit">
                        <span class="icon-container"><i class="uk-icon-rz-save-mini"></i></span>
                        <span class="label"><span class="label-text">{% trans %}save{% endtrans %}</span></span>
                    </button>
                    {% endspaceless %}
                </fieldset>
                {#<node-types-drawer-container entity="document"></node-types-drawer-container>#}
            </form>
        </article>
    </node-type-field-form-container>

    {% include '@Rozier/node-type-fields/actionsMenu.html.twig' %}
</section>
{% endblock %}
