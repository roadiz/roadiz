{% extends 'base.html.twig' %}

{% block content %}
<section id="manage-font">
	<h1 id="font-title">Edit {{ font.getName }}</h1>
	<nav><a class="uk-button uk-button-small" href="{{ path('fontsHomePage') }}"><i class="uk-icon-reply"></i> {% trans %}Back to fonts{% endtrans %}</a></nav>

	{% form_theme form 'forms.html.twig' %}
	<form class="uk-form uk-form-stacked" action="#" method="post" {{ form_enctype(form) }}>
	    {{ form_widget(form) }}

	    <fieldset data-uk-margin>
		    <button class="uk-button uk-button-primary" type="submit"><i class="uk-icon-check"></i> edit.font</button>
	   	</fieldset>
	</form>
</section>
{% endblock %}
