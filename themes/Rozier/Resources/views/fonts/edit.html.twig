{% if not head.ajax %}{% set baseTemplate = '@Rozier/base.html.twig' %}{% else %}{% set baseTemplate = '@Rozier/ajaxBase.html.twig' %}{% endif %}{% extends baseTemplate %}

{% block content %}
<section class="content-global edit-font">

    <header class="content-header header-font header-font-add">
        <h1 class="content-title font-add-title">{{ "edit.font.%name%"|trans({'%name%': font.getName}) }}</h1>
        <a class="content-header-nav-back uk-navbar-content" href="{{ path('fontsHomePage') }}" title="{% trans %}back_to.fonts{% endtrans %}" data-uk-tooltip="{animation:true}"><i class="uk-icon-rz-back-parent"></i></a>
    </header>

    <article class="content content-edit">
    	{% form_theme form '@Rozier/forms.html.twig' %}
    	<form id="edit-font-form" class="uk-form uk-form-stacked" action="#" method="post" {{ form_enctype(form) }}>
    	    {{ form_widget(form) }}

    	    <fieldset data-uk-margin>
    		    <button data-action-save="#edit-font-form" class="uk-button uk-button-primary rz-action-save" type="submit">
                    <span class="icon-container"><i class="uk-icon-rz-save-mini"></i></span>
                    <span class="label"><span class="label-text">{% trans %}save{% endtrans %}</span></span>
                </button>
    	   	</fieldset>
    	</form>
    </article>

    {% include '@Rozier/fonts/actionsMenu.html.twig' with {"font": font} only %}
</section>
{% endblock %}
