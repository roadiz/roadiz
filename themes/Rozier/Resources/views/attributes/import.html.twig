{% extends '@Rozier/layout.html.twig' %}

{% block content %}
<section class="content-global import-item">

    <header class="content-header header-item header-item-import">
        <h1 class="content-title item-export-title">{% trans %}import.nodeType{% endtrans %}</h1>
        <a class="content-header-nav-back uk-navbar-content" href="{{ path('attributesHomePage') }}" title="{% trans %}back_to.attributes{% endtrans %}" data-uk-tooltip="{animation:true}"><i class="uk-icon-rz-back-parent"></i></a>
    </header>

    <article class="content content-item-import content-no-action-menu">
        {% form_theme form '@Rozier/forms.html.twig' %}
        {{ form_start(form, { attr: {id: "import-item-form"}}) }}
            {{ form_widget(form) }}
            <a href="{{ path('attributesHomePage') }}" class="uk-button"><i class="uk-icon-rz-back-parent"></i> {% trans %}cancel{% endtrans %}</a>
            <button type="submit" class="uk-button uk-button-primary"><i class="uk-icon-rz-upload"></i> {% trans %}import{% endtrans %}</button>
        {{ form_end(form) }}
    </article>
</section>
{% endblock %}
