{% if not head.ajax %}{% set baseTemplate = 'base.html.twig' %}{% else %}{% set baseTemplate = 'ajaxBase.html.twig' %}{% endif %}{% extends baseTemplate %}

{% block content %}
<section class="content-global">

    <header class="content-header header-settingGroup header-settingGroup-add">
       <h1 class="content-title settingGroup-list-title">{{ "edit.settingGroup.%name%"|trans({'%name%': settingGroup.getName }) }}</h1>
    </header>

    <article class="content content-settingGroup-edit">
    	{% form_theme form 'forms.html.twig' %}
    	<form id="edit-settingGroup-form" class="uk-form uk-form-stacked" action="#" method="post" {{ form_enctype(form) }}>
    	    {{ form_widget(form) }}
    	    <fieldset data-uk-margin>
    	    	<button data-action-save="#edit-settingGroup-form" class="uk-button uk-button-primary rz-action-save" type="submit">
                    <span class="icon-container"><i class="uk-icon-rz-save-mini"></i></span>
                    <span class="label"><span class="label-text">{% trans %}save.settingGroup{% endtrans %}</span></span>
                </button>
       		</fieldset>
    	</form>
    </article>

    {% include 'settingGroups/actionsMenu.html.twig' %}
</section>
{% endblock %}
