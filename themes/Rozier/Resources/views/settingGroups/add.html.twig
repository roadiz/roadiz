{% if not head.ajax %}{% set baseTemplate = '@Rozier/base.html.twig' %}{% else %}{% set baseTemplate = '@Rozier/ajaxBase.html.twig' %}{% endif %}{% extends baseTemplate %}


{% block content %}
<section class="content-global">

<header class="content-header header-settingGroup header-settingGroup-add">
       <h1 class="content-title settingGroup-list-title">{% trans %}add.a.settingGroup{% endtrans %}</h1>
       <a class="content-header-nav-back uk-navbar-content" href="{{ path('settingGroupsHomePage') }}" title="{% trans %}back_to.settingGroups{% endtrans %}" data-uk-tooltip="{animation:true}"><i class="uk-icon-rz-back-parent"></i></a>
    </header>

    <article class="content content-settingGroup-add">
    	{% form_theme form '@Rozier/forms.html.twig' %}
        <form id="add-settingGroup-form" class="uk-form uk-form-stacked" action="#" method="post" {{ form_enctype(form) }}>
            {{ form_widget(form) }}
    	    <fieldset data-uk-margin>
    	    	<button data-action-save="#add-settingGroup-form" class="uk-button uk-button-primary rz-action-save" type="submit">
                    <span class="icon-container"><i class="uk-icon-rz-save-mini"></i></span>
                    <span class="label"><span class="label-text">{% trans %}save{% endtrans %}</span></span>
                </button>
       		</fieldset>
    	</form>
    </article>

    {% include 'settingGroups/actionsMenu.html.twig' %}
</section>
{% endblock %}
