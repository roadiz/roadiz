{% extends '@Rozier/layout.html.twig' %}

{% block content %}
<section class="content-global content-node-remove-tag">

    <header class="content-header header-node header-node-remove-tag">
         <h1 class="content-title node-remove-tag-title">{{ "unlink.tag.%name%"|trans({'%name%': tag.getTranslatedTags.first.getName})|u.truncate(25, '[â€¦]', true) }}</h1>
    </header>

    <article class="content content-delete content-remove-tag">
        {% form_theme form '@Rozier/forms.html.twig' %}
        {{ form_start(form) }}
            {{ form_widget(form) }}
            <fieldset data-uk-margin>
                <legend class="uk-alert uk-alert-danger"><i class="uk-icon uk-icon-warning"></i> {% trans %}are_you_sure.unlink.tag{% endtrans %}</legend>
                <a href="{{ path('nodesEditTagsPage', { nodeId: node.getId }) }}" class="uk-button"><i class="uk-icon-rz-back-parent"></i> {% trans %}cancel{% endtrans %}</a>
                <button class="uk-button uk-button-danger" type="submit"><i class="uk-icon-rz-trash-mini-o"></i> {% trans %}unlink{% endtrans %}</button>
            </fieldset>
        {{ form_end(form) }}
    </article>

</section>
{% endblock %}
