{% extends 'base.html.twig' %}
{% block content %}
<section id="manage-node-aliases">
	<h1 id="node-title">Edit {{ source.getTitle }} aliases</h1>

	{% include 'nodes/breadcrumb.html.twig' with {"node": node} only %}
	{% include 'nodes/navBar.html.twig' with {"current": 'aliases'} %}

	<h2>{% trans %}Add an alias{% endtrans %}</h2>

	{% form_theme form 'forms.html.twig' %}
	<form class="uk-form uk-form-stacked" action="#" method="post" {{ form_enctype(form) }}>
	    {{ form_widget(form) }}
	    <fieldset data-uk-margin>
	    	<input class="uk-button uk-button-primary" type="submit" />
   		</fieldset>
	</form>

	<hr />
	<h2>{% trans %}Url aliases{% endtrans %}</h2>
	<table class="aliases uk-table">
		<thead>
	        <tr>
	            <th>{% trans %}Alias{% endtrans %}</th>
	            <th>{% trans %}Translation{% endtrans %}</th>
	            <th>{% trans %}Actions{% endtrans %}</th>
	        </tr>
	    </thead>
		<tbody>
			{% for urlAlias in aliases %}
				{% include 'url-aliases/editRow.html.twig' %}
			{% endfor %}
		</tbody>
	</table>


	{% include 'nodes/actionsMenu.html.twig' %}
</section>
{% endblock %}