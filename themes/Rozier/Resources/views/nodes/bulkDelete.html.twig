{% if not head.ajax %}{% set baseTemplate = 'base.html.twig' %}{% else %}{% set baseTemplate = 'ajaxBase.html.twig' %}{% endif %}{% extends baseTemplate %}


{% block content %}
<section class="content-global delete-node">
	<header class="content-header header-node header-node-preview">
        <h1 class="content-title node-delete-title">{{ "delete.nodes"|trans() }}</h1>
    </header>

    <article class="content content-delete content-no-action-menu">
        {% spaceless %}
        <ul class="nodes-list">
        {% for node in nodes %}
            {% set source = node.nodeSources.first %}
            <li class="node-item">
                <div class="node-border"></div>
                <div class="node-title">{{ source.title }}</div>
                <div class="node-name">{{ node.nodeName }}</div>
            </li>
        {% endfor %}
        </ul>
        {% endspaceless %}
		{% form_theme form 'forms.html.twig' %}
		<form class="uk-form uk-form-stacked" action="{{ action }}" method="post" {{ form_enctype(form) }}>
		    {{ form_widget(form) }}
		    <fieldset data-uk-margin>
		    	<legend>{% trans %}are_you_sure.delete.these.nodes{% endtrans %}</legend>
		    	<a href="{{ path('nodesHomePage') }}" class="uk-button"><i class="uk-icon-rz-back-parent"></i> {% trans %}cancel{% endtrans %}</a>
		    	<button class="uk-button uk-button-danger" type="submit"><i class="uk-icon-rz-trash-mini-o"></i> {% trans %}delete{% endtrans %}</button>
	   		</fieldset>
		</form>
	</article>
</section>
{% endblock %}
