<nav data-action-menu class="actions-menu uk-navbar rz-vertical-align">
    {# Delete current node #}

    {% if (securityContext.Granted('ROLE_ACCESS_NODES_DELETE')) %}

    <a class="uk-button uk-button-danger" href="{{ path('nodesDeletePage', { nodeId: node.getId}) }}"><i class="uk-icon-rz-trash-o"></i><span class="label">{% trans %}delete{% endtrans %}</span></a>

    {% endif %}

    {#
     # Node actions
     #}
    <div class="node-actions">
        <header><i class="uk-icon-rz-actions"></i><span class="label">{% trans %}actions{% endtrans %}</span></header>
        <nav>
            {% if source %}
            <a class="uk-button" target="_blank" href="{{ source.getHandler.getUrl }}"><i class="uk-icon-rz-visibility-on"></i><span class="label">{% trans %}see.page{% endtrans %}</span></a>
            {% endif %}
            <a class="uk-button" href="#"><i class="uk-icon-rz-duplicate"></i><span class="label">{% trans %}duplicate{% endtrans %}</span></a>
            <a class="uk-button" href="{{ path('nodesAddChildPage', { nodeId:node.getId }) }}"><i class="uk-icon-rz-plus"></i><span class="label">{% trans %}add.child{% endtrans %}</span></a>
            <a class="uk-button" href="{{ path('nodesExportPage', { nodeId:node.getId }) }}"><i class="uk-icon-rz-download"></i><span class="label">{% trans %}export{% endtrans %}</span></a>
        </nav>
    </div>

    {#
     # Node statuses
     #}
    {% if (securityContext.Granted('ROLE_ACCESS_NODES_STATUS')) %}
    <div class="node-statuses">
        <header><i class="uk-icon-rz-check"></i><span class="label">{% trans %}statuses{% endtrans %}</span></header>
        <ul>
            <li class="node-visibility">
                <i class="uk-icon-rz-visibility-on"></i>
                <span class="label">{% trans %}visibility{% endtrans %}</span>
                <input data-node-id="{{ node.getId }}" class="rz-boolean-checkbox" type="checkbox" name="visible" value="1" {% if node.isVisible %}checked{% endif %} />
            </li>
            <li class="node-published">
                <i class="uk-icon-rz-published"></i>
                <span class="label">{% trans %}published{% endtrans %}</span>
                <input data-node-id="{{ node.getId }}" class="rz-boolean-checkbox" type="checkbox" name="published" value="1" {% if node.isPublished %}checked{% endif %} />
            </li>
            <li class="node-hiding-children">
                <i class="uk-icon-rz-stack"></i>
                <span class="label">{% trans %}hiding-children{% endtrans %}</span>
                <input data-node-id="{{ node.getId }}" class="rz-boolean-checkbox" type="checkbox" name="hideChildren" value="1" {% if node.isHidingChildren %}checked{% endif %} />
            </li>
            <li class="node-lock">
                <i class="uk-icon-rz-lock"></i>
                <span class="label">{% trans %}lock-status{% endtrans %}</span>
                <input data-node-id="{{ node.getId }}" class="rz-boolean-checkbox" type="checkbox" name="locked" value="1" {% if node.isLocked %}checked{% endif %} />
            </li>
            <li class="node-sterile">
                <i class="uk-icon-rz-sterile"></i>
                <span class="label">{% trans %}sterile-status{% endtrans %}</span>
                <input data-node-id="{{ node.getId }}" class="rz-boolean-checkbox" type="checkbox" name="sterile" value="1" {% if node.isSterile %}checked{% endif %} />
            </li>
            <li class="node-archive">
                <i class="uk-icon-rz-archive"></i>
                <span class="label">{% trans %}archive-status{% endtrans %}</span>
                <input data-node-id="{{ node.getId }}" class="rz-boolean-checkbox" type="checkbox" name="archived" value="1" {% if node.isArchived %}checked{% endif %} />
            </li>
        </ul>
    </div>
    {% endif %}
</nav>
