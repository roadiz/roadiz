{% extends 'base.html.twig' %}
{% block content %}
<section id="manage-node">
    <header class="content-header header-node header-node-edit" id="header-node-edit">
        {% include 'nodes/breadcrumb.html.twig' with {"node": node} only %}
        <h1 class="content-title" id="node-edit-title">{{ "edit.node.%name%"|trans({'%name%': node.getNodeName}) }}</h1>
        {% include 'nodes/navBar.html.twig' with {"current": 'edit'} %}
    </header>

    <article class="content" id="content-node-edit">
        {% form_theme form 'forms.html.twig' %}
        <form id="edit-node-form" class="node-form uk-form uk-form-stacked" action="#" method="post" {{ form_enctype(form) }}>
            {{ form_widget(form) }}
            <fieldset data-uk-margin>
                {% spaceless %}
                <button data-action-save="#edit-node-form" class="uk-button uk-button-primary rz-action-save" type="submit">
                    <i class="uk-icon-save"></i>
                    <span class="label">{% trans %}save{% endtrans %}</span>
                </button>
                {% endspaceless %}
            </fieldset>
        </form>

        {% if translationForm %}
        <h2 id="add-node-translation">{% trans %}translate.node{% endtrans %}</h2>
        {% form_theme translationForm 'forms.html.twig' %}
        <form class="uk-form uk-form-stacked" action="#" method="post" {{ form_enctype(translationForm) }}>
            {{ form_widget(translationForm) }}
            <fieldset data-uk-margin>
                <input class="uk-button uk-button-primary" type="submit" value="{% trans %}translate{% endtrans %}" />
            </fieldset>
        </form>
        {% endif %}
    </article>

    {% include 'nodes/actionsMenu.html.twig' %}
</section>
{% endblock %}
