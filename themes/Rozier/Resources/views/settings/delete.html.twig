{% extends 'base.html.twig' %}


{% block content %}
<section class="content-global">

	<header class="content-header header-setting header-setting-delete">
	   <h1 class="content-title setting-delete-title">{{ "delete.setting.%name%"|trans({'%name%': setting.getName }) }}</h1>
    </header>

    <article class="content content-delete content-no-action-menu">
	{% form_theme form 'forms.html.twig' %}
	<form class="uk-form uk-form-stacked" action="#" method="post" {{ form_enctype(form) }}>
	    {{ form_widget(form) }}
	    <fieldset data-uk-margin>
	    	<legend>{% trans %}are_you_sure.delete.setting{% endtrans %}</legend>
	    	<a href="{{ path('settingsHomePage') }}" class="uk-button"><i class="uk-icon-reply"></i> {% trans %}cancel{% endtrans %}</a>
	    	<button class="uk-button uk-button-danger" type="submit"><i class="uk-icon-trash-o"></i>
                    <span class="label">{% trans %}delete{% endtrans %}</span></button>
   		</fieldset>
	</form>
	</article>
</section>
{% endblock %}
