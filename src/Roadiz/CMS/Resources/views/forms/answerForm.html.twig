{% extends 'base_email.html.twig' %}

{% block title %}<title>{{ title }}</title>{% endblock %}

{% block content_table %}
<table width="100%" cellpadding="0" cellspacing="0">
    <tr>
        <td class="content-block">
            <h1>{% trans %}answer.form{% endtrans %}</h1>
        </td>
    </tr>
    <tr>
        <td class="content-block">
            <h2>{{ title }}</h2>
        </td>
    </tr>
    <tr>
        <td class="content-block">
            <table class="invoice">
                <tr>
                    <td>
                        <table class="invoice-items" cellpadding="0" cellspacing="0">
                            {% for field in fields %}
                            <tr>
                                <td class="paddingright"><strong>{{ field.name|trans }}</strong></td>
                                <td class="alignleft">{% if field.name == "submittedAt" %}{{ field.value|localizeddate("medium", "short") }}{% else  %}{{ field.value }}{% endif %}</td>
                            </tr>
                            {% endfor %}
                        </table>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>
{% endblock %}
