{% spaceless %}
    {% set attributes = {
        'alt': alt|url_encode,
    } %}
    {% if width %}
        {% set attributes = attributes|merge({
            'width': width,
        }) %}
    {% endif %}
    {% if height %}
        {% set attributes = attributes|merge({
        'height': height,
        }) %}
    {% endif %}
    {% if class %}
        {% set attributes = attributes|merge({
        'class': class,
        }) %}
    {% endif %}
    {% if identifier %}
        {% set attributes = attributes|merge({
        'id': identifier,
        }) %}
    {% endif %}
    {# Add controls by default #}
    {% if controls is not same as(false) %}
        {% set attributes = attributes|merge({
        'controls': true,
        }) %}
    {% endif %}
    {% if autoplay is same as(true) %}
        {% set attributes = attributes|merge({
        'autoplay': true,
        }) %}
    {% endif %}
    {% if loop is same as(true) %}
        {% set attributes = attributes|merge({
        'loop': true,
        }) %}
    {% endif %}
    {% set attributesCompiled = {} %}
    {% for key, value in attributes %}
        {% if value is same as(true)  %}
            {% set attributesCompiled = attributesCompiled|merge([key]) %}
        {% else %}
            {% set attributesCompiled = attributesCompiled|merge([key ~ '="' ~ value ~ '"']) %}
        {% endif %}
    {% endfor %}
<audio data-document {{ attributesCompiled|join(' ')|raw }}>
    {% for source in sources %}
    <source type="{{ source.mime }}" src="{{ source.url }}">
    {% endfor %}
    Your browser does not support the audio tag.
</audio>
{% endspaceless %}
